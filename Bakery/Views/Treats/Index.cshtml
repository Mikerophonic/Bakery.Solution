@{
  Layout = "_Layout";
}

@using Bakery.Models;

<div class="container">
  <h1>Your Treats</h1>

  @if (@Model.Count == 0)
  {
    <h3>No treats have been added yet!</h3>
  } 
  else
  {
    <ul>
      @foreach (Treat treat in Model)
      {
        <button class="button flavor-treat-btn">
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
        </button>
      }
      </ul>
  }
  <br>
  <p><button class="button">@Html.ActionLink("Add new treat", "Create")</button></p>
</div>