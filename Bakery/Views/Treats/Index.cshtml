@{
    Layout = "_Layout";
}

@using Bakery.Models;

<div class="container">
    <h1>Your Treats</h1>

    @if (Model.Count == 0)
    {
        <h3>No treats have been added yet!</h3>
    }
    else
    {
        <ul>
            @foreach (Treat treat in Model)
            {
                <li>
                    <button class="button flavor-treat-btn" onclick="location.href='@Url.Action("Details", new { id = treat.TreatId })'">
                        @treat.Name
                    </button>
                </li>
            }
        </ul>
    }

    <br>

    <p>
        <button class="button" onclick="location.href='@Url.Action("Create")'">Add new treat</button>
    </p>
</div>
