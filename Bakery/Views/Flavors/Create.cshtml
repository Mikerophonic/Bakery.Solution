@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor
<div class="container">

<h4>Add a new flavor</h4>

<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Add new flavor" class="button" />
}
<p><button class="button">@Html.ActionLink("Show all flavors", "Index")</button></p>
</div>
