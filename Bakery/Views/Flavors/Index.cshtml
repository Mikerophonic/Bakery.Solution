@{
    Layout = "_Layout";
}

@using Bakery.Models;

<div class="container">
    <h1>Your Flavors</h1>

    @if (Model.Count == 0)
    {
        <h3>No flavors have been added yet!</h3>
    }
    else
    {
        <ul>
            @foreach (Flavor flavor in Model)
            {
                <li>
                    <button class="button flavor-treat-btn" onclick="location.href='@Url.Action("Details", new { id = flavor.FlavorId })'">
                        @flavor.Description
                    </button>
                </li>
            }
        </ul>
    }

    <br>

    <p>
        <button class="button" onclick="location.href='@Url.Action("Create")'">Add new flavor</button>
    </p>
</div>
