@{
  Layout = "_Layout";
}

@using Bakery.Models;
<div class="container">
<h1>Your Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <button class="button flavor-treat-btn">
      <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId }) </li>
      </button>
    }
  </ul>
}
<br>
<p><button class="button">@Html.ActionLink("Add new flavor", "Create")</button></p>
</div>